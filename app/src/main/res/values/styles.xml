<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="rb_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/rb_background</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/rb_textcolor</item>
    </style>

    <style name="cm_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="cm_apply_btn" parent="cm_btn">
        <item name="android:background">@drawable/cm_apply_button</item>
    </style>

    <style name="cm_disconnect_btn" parent="cm_btn">
        <item name="android:background">@drawable/cm_disconnect_button</item>
    </style>
    <!-- 全屏幕拉伸 -->
    <style name="layout_full">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="layout_record_select">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="playBottomTextViewStyle" parent="android:Widget.Holo.Light.TextView">
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">13sp</item>
        <item name="android:visibility">gone</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="adTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:background">@color/ad_color</item>
        <item name="android:padding">3dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="rbStyle">
        <!-- <item name="android:background">@drawable/play_rb_bg</item> -->
        <item name="android:button">@null</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@drawable/play_rb_textcolor</item>
        <item name="android:textSize">12sp</item>

    </style>
    <style name="TagGroup.Beauty_Blue" parent="TagGroup">
        <item name="atg_borderColor">@color/colorPrimary</item>
        <item name="atg_textColor">@color/colorPrimary</item>
        <item name="atg_checkedBorderColor">@color/colorPrimary</item>
        <item name="atg_checkedBackgroundColor">#FF3D7F</item>
    </style>

    <style name="Signup_info_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="Signup_info_edittext">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>
